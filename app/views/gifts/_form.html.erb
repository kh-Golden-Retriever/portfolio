<div class="row mt-5">
  <div class="col-1 text-center">
    <%= link_to :back do %>
      <i class="fas fa-angle-left fs-2 brown"></i>
    <% end %>
  </div>
  <div class="col-10">
    <div class="container mx-auto w-50 light-brown">
      <h1><%=title%></h1>
      <br>
      <%= form_with(model: gift, local: true) do |f| %>
        <%= render 'shared/error_message', obj: f.object %>
        <div class='form-group mb-5'>
          <%= f.label :title %>
          <%= f.text_field :title, class:'form-control outline-light-brown' %>
        </div>
        <div class='form-group mb-5'>
          <%= f.label :description %>
          <%= f.text_area :description, rows: 10, class:'form-control outline-light-brown' %>
        </div>
        <div class='form-group mb-5'>
          <%= f.label :how_to_give %>
          <%= f.text_area :how_to_give, rows: 2, class:'form-control outline-light-brown' %>
        </div>
        <div class='form-group mb-5'>
          <%= f.label :price %>
          <%= f.number_field :price, class:'form-control outline-light-brown' %>
        </div>
        <div class='form-group mb-5'>
          <%= f.label :images %>
          <%= f.file_field :images, multiple: true, class:'form-control outline-light-brown' %>
        </div>
        <div class="actions">
          <%= f.submit '下書き保存', name:'draft', class:'btn btn-outline-wine-red' %>
        </div>
        <div class="actions">
          <%= f.submit '作成して公開', name:'display', class:'btn btn-fill-wine-red' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
