<div class="col">
  <div class="card h-100">
    <img src="..." class="card-img-top" alt="...">
    <div class="card-body">
      <h5 class="card-title"><%= gift.title %></h5>
      <div>
        <%= gift.description %>
        <%= gift.how_to_give %>
        <%= gift.price %>
        <%= gift.status %>
        <%= gift.created_at.strftime('%-m/%d %H:%M') %>
        <br>
        <%= gift.user.name %>
        <%= gift.user.email %>
        <%= link_to 'Show', gift %>
        <%= link_to 'Edit', edit_gift_path(gift) %>
        <%= link_to 'Destroy', gift, method: :delete, data: { confirm: 'Are you sure?' } %>
      </div>
    </div>
  </div>
</div>
