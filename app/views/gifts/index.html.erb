<h1>Index</h1>
<p id="notice"><%= notice %></p>
<h1>Gifts<span><i class="fa fa-star-o"><i class="fa fa-star"></i></span></h1>
  <i class="fa fa-clock-o"></i>
  <table>
    <thead>
      <tr>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @gifts.each do |gift| %>
        <tr>
          <td><%= gift.title %></td>
          <td><%= gift.description %></td>
          <td><%= gift.how_to_give %></td>
          <td><%= gift.price %></td>
          <td><%= gift.status %></td>
          <td><%= link_to 'Show', gift %></td>
          <td><%= link_to 'Edit', edit_gift_path(gift) %></td>
          <td><%= link_to 'Destroy', gift, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>
  <%= link_to 'New Gift', new_gift_path %>
