<div class="container mx-auto mt-5 w-25 light-brown">
  <%=form_with url: login_path, method: :post, local: true do |f|%>
    <div class='form-group mb-5'>
      <%= f.label :email %>
      <%= f.text_field :email, class:'form-control outline-light-brown' %>
    </div>
    <div class='form-group mb-5'>
      <%= f.label :password %>
      <%= f.text_field :password, class:'form-control outline-light-brown' %>
    </div>
    <div>
      <%= f.submit 'ログイン' ,class:'btn btn-fill-wine-red'%>
    </div>
  <% end %>
  <div class=" mt-3">
    <%= link_to 'パスワードを忘れた場合はこちら', new_password_reset_path ,class:'light-brown'%>
  </div>
  <div class=" mt-3">
    <%= link_to '新規登録する', new_user_path ,class:'light-brown'%>
  </div>
</div>
